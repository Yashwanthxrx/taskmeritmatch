<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backg2"
    tools:context=".UserActivity">

    <TextView
        android:id="@+id/meritm"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:fontFamily="@font/honk"
        android:text="Merit Match"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/gradientpage">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Details"
                android:id="@+id/taskDetailsTitle"
                android:fontFamily="@font/playfair"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/designn"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/taskTitle"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Task Title"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/taskDescription"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Task Description"
                android:padding="8dp"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/phone"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Phone Number"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/taskPoints"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Karma Points"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/saveTaskButton"
                android:text="Create Task"
                android:fontFamily="@font/playfair"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/shad"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>